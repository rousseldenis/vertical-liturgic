<odoo>

    <record model="ir.actions.act_window" id="ir_attachment_category_act_window">
        <field name="name">Categories</field>
        <field name="res_model">ir.attachment.category</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('worship_related', '=', True)]</field>
        <field name="context" eval="{'default_worship_related': True}"/>
    </record>

    <record model="ir.actions.act_window" id="ir_attachment_act_window">
        <field name="name">Documents</field>
        <field name="res_model">ir.attachment</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[('worship_related', '=', True)]</field>
        <field name="context" eval="{'default_worship_related': True}"/>
    </record>

    <!-- MENUS -->
    <!-- LIBRARY ROOT -->
    <record model="ir.ui.menu" id="worship_library_root">
        <field name="name">Library</field>
        <field name="parent_id" ref="worship.worship_menu_root"/>
        <field name="sequence" eval="16"/>
    </record>

    <record model="ir.ui.menu" id="ir_attachment_category_menu">
        <field name="name">Categories</field>
        <field name="parent_id" ref="worship_library_root"/>
        <field name="action" ref="ir_attachment_category_act_window"/>
        <field name="sequence" eval="1"/>
    </record>
     <record model="ir.ui.menu" id="ir_attachment_menu">
        <field name="name">Documents</field>
        <field name="parent_id" ref="worship_library_root"/>
        <field name="action" ref="ir_attachment_act_window"/>
        <field name="sequence" eval="2"/>
    </record>


</odoo>
